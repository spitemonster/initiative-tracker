{
    "compilerOptions":
    {
        "module": "es2015",
        "moduleResolution": "node",
        "target": "ESNext",
        "strict": true,
        "lib": [
            "dom",
            "es5",
            "es2015",
            "es2015.promise"
        ],
        "resolveJsonModule": true,
        "allowJs": true,
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "experimentalDecorators": true,
    },
    "compileOnSave": false
}
